# Databáza (povinné pre bežný beh)
DB_HOST=localhost
DB_NAME=pay_obsad
DB_USER=
DB_PASS=

# Aplikácia
APP_ENV=development
APP_URL=https://pay.obsad.sk
APP_BASE_URL=
APP_DEBUG=0

# Platby – režim: fake | sandbox | live (default fake)
PAYMENT_MODE=fake
PAYMENT_CURRENCY=EUR

# Fake provider – východzí stav pri return (paid / failed / cancelled)
FAKE_DEFAULT_STATUS=paid

# Logovanie
LOG_FILE=storage/logs/app.log

# Notifikácie – token pre pay-notify.php (header X-Notify-Token alebo query token)
NOTIFY_TOKEN=

# VÚB eCard – sandbox / produkcia (doplniť pre reálny sandbox)
ECARD_GATEWAY_URL=
ECARD_MERCHANT_ID=
ECARD_SHARED_SECRET=
ECARD_PRIVATE_KEY_PATH=
ECARD_PUBLIC_CERT_PATH=

# Migrácie – admin endpoint (defaultne vypnutý)
RUN_MIGRATIONS_ENDPOINT=0
MIGRATE_TOKEN=

# Viacero klientov (CLIENTS_MODE=on): HMAC podpis pay-init (client_id, ts, nonce, sig). Default off.
CLIENTS_MODE=off
CLIENT_SECRET=
CLIENTS_TS_MAX_AGE=300
